<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Button
        android:text="Logowanie"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bNHMLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:background="#045800"
        android:onClick="bNHMLogin_ClickListener"/>

    <Button
        android:text="Rejestracja"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bNHMRegistration"
        android:background="#6b0000"
        android:layout_below="@+id/bNHMLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="bNHMRegistration_ClickListener"/>
</RelativeLayout>
